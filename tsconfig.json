{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true, // Генерация деклараций типов
    "declarationDir": "./dist", // Директория для типов
    "declarationMap": true, // Включение карт для деклараций типов (опционально)  // Генерация только типов (без JS кода)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "bin"]
}
