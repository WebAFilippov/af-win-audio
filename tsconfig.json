{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",

    "declaration": true,             
    "declarationMap": true,          
    "emitDeclarationOnly": false,    
    "outDir": "./dist",             
    "strict": true,                  

    "skipLibCheck": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true    
  },
  "include": ["src/index.ts"],        
  "exclude": ["node_modules", "dist"] 
}
